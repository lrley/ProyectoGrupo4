@page
@model LoginModel

@{
    ViewData["Title"] = "Acceso de Usuario";
}

@* <h1>@ViewData["Title"]</h1> *@
<div class="container d-flex align-items-center justify-content-center mt-5">


    <div class="row justify-content-center w-100">
        <!-- Logo arriba (opcional, igual que en Register) -->
        <div class="text-center ">
            <img src="~/image/logo_paginaweb.png" alt="Logo DLACCESS" class="img-fluid mb-1" style="max-height: 210px;">
            
        </div>
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">

              

                <!-- Header con tus colores -->
                <div class="card-header bg-primary text-white bg-dark text-center">
                    <h3><i class="bi bi-box-arrow-in-right me-1"></i> Iniciar Sesión</h3>
                </div>

                <!-- Body con más aire -->
                <div class="card-body p-5">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control border border-dark" autocomplete="username" aria-required="true" placeholder="desarrollo@dlaccess.net" />
                            <label asp-for="Input.Email"><i class="bi bi-envelope-fill me-2"></i> Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control border border-dark" autocomplete="current-password" aria-required="true" placeholder="Escriba su Contraseña" />
                            <label asp-for="Input.Password"><i class="bi bi-lock-fill me-2"></i> Contraseña</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me 

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                        @*         @Html.DisplayNameFor(m => m.Input.RememberMe) *@
                            </label>
                        </div>
                        -->

                        <!-- Botón con tus colores -->
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary bg-dark">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Acceder
                        </button>
                    </form>
                </div>

                <!-- Footer con tus colores -->
                <div class="card-footer text-center">
                    <small class="text-muted">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">¿Olvidaste tu contraseña?</a><br />
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Registrar nuevo usuario</a><br />
                       @*  <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Reenviar confirmación de email</a> *@
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



