@{
    ViewData["Title"] = "DLACCESS";
}


<style>
    body {
        background-color: #f8f9fa; /* fondo claro y moderno */
    }

    .btn-start {
        font-size: 1.5rem;
        padding: 1rem 2rem;
        border-radius: 8px;
        position: absolute; /* se monta sobre el logo */
        bottom: -80%; /* ajusta la altura relativa */
        left: 50%;
        transform: translateX(-50%);
        z-index: 2; /* asegura que quede encima */
    }

    .logo {
        max-width: 600px;
        position: relative;
        z-index: 1;
    }

    .main-content {
        min-height: calc(100vh - 56px);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
    }

    .overlay {
        position: relative;
        display: inline-block; /* para que el botón se monte sobre la imagen */
    }

    h1 {
        margin-top: 1rem;
        font-weight: bold;
    }

    .credits {
        margin-top: 2rem;
        font-size: 1rem;
        color: #333;
        list-style: none;
        padding: 0;
    }

        .credits li {
            margin: 0.3rem 0;
        }

    .credits-container {
        position: absolute; /* se posiciona de forma independiente */
        top: 50%; /* ajusta la altura relativa */
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        z-index: 2;
    }

</style>

<body>
    <!-- Barra de navegación fija arriba -->
  

    <!-- Contenido principal -->
    <div class="main-content">
        
        <div class="overlay">
            <img src="/image/dl_access_logo_biometrics.png" alt="Logo" class="logo" />
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary bg-dark btn-start">Iniciar</a>
        </div>

        <div class="credits-container">
            
            <h1 class="text-dark">DESARROLLO DE SOFTWARE GRUPO # 4</h1>
            <ul class="credits">
                <li>ALLAN STEVEN MANZANILLAS LOZADA</li>
                <li>JONATHAN ANDREW CAMPOS GOMEZ</li>
                <li>LUIS ROBERTO LEY VITERI</li>
            </ul>
        </div>

    </div>
</body>


