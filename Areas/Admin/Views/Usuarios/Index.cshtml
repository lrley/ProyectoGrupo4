@using DlaccessCore.Models.Models.IdentidadDeUsuario

@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Usuarios";
}


<div class="container mt-4">
    <div class="row">

        <div class="col-8">
            <h2 class="text-black">Lista de Usuarios</h2>
        </div>

        <div class="col-4 text-right">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info bg-dark text-white">Crear Nuevo Usuario</a>
            <i class="fa-solid fa-plus"></i>
        </div>

    </div>

    <br />
    <br />


    @if (Model.Count() > 0)
    {

    <table id="tblUsuario" class=" table table-striped table-bordered ">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre del Usuario</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m=>item.Id)</td>
                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                        <td>@Html.DisplayFor(m => item.Email)</td>
                        <td>
                            @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                            {
                                <a class="btn btn-danger text-white" asp-action="Bloquear" style="width:150px" asp-route-id="@item.Id">
                                    <i class="bi bi-person-fill-lock"></i> Bloquear
                                </a>    
                            }
                            else
                            {
                                <a class="btn btn-success text-white" asp-action="Desbloquear" style="width:150px" asp-route-id="@item.Id">
                                   <i class="bi bi-unlock-fill"></i> Desbloquear
                                </a>

                            }

                        </td>
                    </tr>

                }

        </tbody>
    </table>
        


    }



</div>
