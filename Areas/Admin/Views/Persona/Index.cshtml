

@{
    ViewData["Title"] = "Persona";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-between align-items-center">

        <div class="col-8">
            <h2 class="text-primary">Lista de Personas</h2>
        </div>

        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">Crear Nueva Persona</a>
            <i class="fa-solid fa-plus"></i>
        </div>

    </div>

    <br />
    <br />

    <!-- Modal para mostrar imagen -->
    <div class="modal fade" id="modalImagen" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img id="imagenGrande" src="" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>


   <div class="table-responsive">
        <table id="tblPersona" class=" table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cedula</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Sexo</th>
                <th>Tipo de Persona</th>
                <th>Imagen</th>
                
                <th>Fecha Creacion</th>
                <th>Fecha de Nacimiento</th>
                <th>Fecha de Inicio</th>
                <th>Fecha Fin</th>
                
                <th>Direccion</th>



                <th>Fecha de Sistema Up</th>
                <th>Fecha de Actualizacion</th>
              
                <th>Estado</th>
                <th>Permiso</th>
                <th>Google</th>
              
                <th>Acciones</th>
            </tr>
        </thead>
       </table>
    </div>

</div>

@section Scripts {
    <script src="~/js/Persona.js"></script>
    <script>
        function mostrarImagen(src) {
            document.getElementById("imagenGrande").src = src;
            var modal = new bootstrap.Modal(document.getElementById("modalImagen"));
            modal.show();
        }
    </script>
}
