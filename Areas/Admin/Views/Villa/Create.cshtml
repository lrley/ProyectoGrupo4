@using DlaccessCore.Models.Models.ViviendaViewModels.Casa
@model Villa

@{
    ViewData["Title"] = "Crear Villa";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}



<br />
<br />
<h2 class="text-primary">Crear Villa</h2>

<form method="post" asp-action="Create">
    <div class="row px-2 offset-1 border">

        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }

        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreVilla"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreVilla" class="form-control" placeholder="Ingrese la Villa" />
                    <span asp-validation-for="NombreVilla" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-row mt-4 ">
                <div class="col-8 mt-4 ">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>

        </div>



    </div>



</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



