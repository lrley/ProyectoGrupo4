@using DlaccessCore.Models.ViewModels
@model EtapaVM

@{
    ViewData["Title"] = "Crear Etapa";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}



<br />
<br />
<h2 class="text-primary">Crear Etapa</h2>

<form method="post" asp-action="Create">
    <div class="row px-2 offset-1 border">

        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }

        <div class="col-10 offset-1 mt-4">

            <div class="form-group row mt-4 mb-4">
                <div class="col-4">
                    <label asp-for="Etapa.NombreEtapa"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Etapa.NombreEtapa" class="form-control" placeholder="Ingrese Etapa" />
                    <span asp-validation-for="Etapa.NombreEtapa" class="text-danger"></span>
                </div>
            </div>


            <div class="row g-3">

                <div class="col-md-4">
                    <label asp-for="Etapa.UrbanizacionId" class="form-label"></label>
                    @Html.DropDownListFor(
                    m => m.Etapa.UrbanizacionId,
                                        Model.ListaUrbanizaciones,
                                        "-Seleccione la Urbanizacion-",
                                        new { @class = "selectpicker", data_live_search = "true" }
                                        )
                    <span asp-validation-for="Etapa.UrbanizacionId" class="text-danger"></span>
                </div>

           



            </div>




            <div class="form-group-row mt-3 ">
                <div class="col-8 mt-3 ">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>

        </div>



    </div>



</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



