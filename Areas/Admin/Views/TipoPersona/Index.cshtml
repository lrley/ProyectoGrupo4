@{
}

@{
    ViewData["Title"] = "Tipo Persona";
}

<div class="container mt-4">
    <div class="row">

        <div class="col-8">
            <h2 class="text-primary">Lista de Tipo Persona</h2>
        </div>

        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo Tipo de Persona</a>
            <i class="fa-solid fa-plus"></i>
        </div>

    </div>

    <br />
    <br />

    <table id="tblTipoPersona" class=" table table-striped table-bordered ">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre del Tipo de Persona</th>
                <th>Fecha de Creacion</th>
                <th>Fecha de Actualizacion</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/TipoPersona.js"></script>
}