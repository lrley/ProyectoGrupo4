@{
    ViewData["Title"] = "Información Detallada";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary"><i class="bi bi-clipboard-data"></i> Lista de Información Detallada</h2>
        </div>
        <div class="col-4 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Crear Nuevo Registro
            </a>
        </div>
    </div>

    <hr />

    <div class="card shadow-sm">
        <div class="card-body">
            <table id="tblInfoDetallada" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Persona</th>
                        <th>Ubicación</th>
                        <th>Vehículo</th>
                        <th>Placa</th>
                        <th>Tag</th>
                        <th>Tarjeta</th>
                        <th>Tipo de Propietario</th>
                        <th>Foto</th>
                        <th>Fecha</th>
                        <th>Permiso</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>


    <!-- Modal para ver imagen -->
    <div class="modal fade" id="modalImagen" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content bg-dark">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-white">
                        <i class="bi bi-image"></i> Foto del Vehículo
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="imagenExpandida" src="" class="img-fluid rounded shadow"
                         style="max-height:80vh;" />
                </div>
            </div>
        </div>
    </div>



</div>

@section Scripts {
    <script src="~/js/InfoDetallada/InfoDetalladaIndex.js"></script>
    <style>
        .img-thumbnail {
            transition: transform .2s;
        }

            .img-thumbnail:hover {
                transform: scale(1.1);
            }
    </style>
}