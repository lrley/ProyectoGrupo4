<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0"><i class="bi bi-pencil-square"></i> Editar Información Detallada</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <form asp-action="Edit" method="post" id="formCreate" enctype="multipart/form-data">

        <!-- CAMPO OCULTO CRÍTICO PARA EDIT -->
        <input type="hidden" asp-for="InfoDetallada.Id" />
        <input type="hidden" asp-for="InfoDetallada.FechaCreacion" />
        <input type="hidden" asp-for="InfoDetallada.CreatedAt" />

        <!-- ================= PERSONA ================= -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white bg-dark d-flex justify-content-between align-items-center">
                <h5 class="m-0"><i class="bi bi-person-circle"></i> Selección de Persona</h5>
                <span class="badge bg-white text-primary" id="badgePersona">
                    @(Model.InfoDetallada.IdPersona > 0 ? "Seleccionado" : "Pendiente")
                </span>
            </div>
            <div class="card-body p-4">

                <div class="row align-items">
                    <div class="col-md-8">
                        <label asp-for="InfoDetallada.IdPersona" class="form-label fw-bold">
                            Buscar Persona <span class="text-danger">*</span>
                        </label>
                        <select id="personaSelect" name="InfoDetallada.IdPersona"
                                class="form-select select2-persona" style="width: 100%;">
                            <option value="">-- Escriba para buscar persona --</option>
                            @if (Model.InfoDetallada.IdPersona > 0 && !string.IsNullOrEmpty(Model.NombrePersonaSeleccionada))
                            {
                                <option value="@Model.InfoDetallada.IdPersona" selected>@Model.NombrePersonaSeleccionada</option>
                            }
                        </select>
                        <span asp-validation-for="InfoDetallada.IdPersona" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <button type="button" id="btnVerPersona" class="btn btn-outline-primary w-100"
                                @(Model.InfoDetallada.IdPersona > 0 ? "" : "disabled")>
                            <i class="bi bi-eye"></i> Ver detalle persona
                        </button>
                        <button type="button" id="btnResetPersona" class="btn btn-outline-primary w-100 mt-2"
                                @(Model.InfoDetallada.IdPersona > 0 ? "" : "disabled")>
                            <i class="bi bi-x-circle-fill"></i> Reset detalle persona
                        </button>
                    </div>
                </div>

                <div id="previewPersona" class="mt-3 preview-card @(Model.InfoDetallada.IdPersona > 0 ? "" : "d-none")">
                    <div id="previewContent">
                        <!-- Se llena dinámicamente con JS -->
                    </div>
                </div>

            </div>
        </div>

        <!-- ================= SELECCIÓN TIPO UBICACIÓN ================= -->
        @{
            bool esCasa = Model.InfoDetallada.CasaId != null && Model.InfoDetallada.CasaId > 0;
            bool esEdificio = Model.InfoDetallada.IdEdificio != null && Model.InfoDetallada.IdEdificio > 0;
            bool radioCasaChecked = esCasa || (!esCasa && !esEdificio);
        }
        <div class="card mb-3 border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="m-0"><i class="bi bi-geo-alt-fill"></i>Su Vivienda es: Casa o Edificio</h5>
            </div>
            <div class="card-body p-3">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="tipoUbicacion" id="radioCasa" value="casa"
                           @(radioCasaChecked ? "checked" : "") onchange="toggleUbicacion()">
                    <label class="form-check-label fw-bold" for="radioCasa">
                        <i class="bi bi-house-door-fill"></i> Casa
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="tipoUbicacion" id="radioEdificio" value="edificio"
                           @(esEdificio ? "checked" : "") onchange="toggleUbicacion()">
                    <label class="form-check-label fw-bold" for="radioEdificio">
                        <i class="bi bi-building"></i> Edificio
                    </label>
                </div>
            </div>
        </div>

        <!-- ================= CASA ================= -->
        <div class="card mb-4 @(esEdificio ? "d-none" : "")" id="cardCasa">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="m-0"><i class="bi bi-house-door-fill"></i> Selección de Casa</h5>
                <span class="badge bg-white text-primary" id="badgeCasa">
                    @(Model.InfoDetallada.CasaId != null ? "Seleccionado" : "Pendiente")
                </span>
            </div>
            <div class="card-body p-4" id="contenidoCasa">

                <div class="row align-items">
                    <div class="col-md-8">
                        <label asp-for="InfoDetallada.CasaId" class="form-label fw-bold">
                            Buscar Casa <span class="text-danger">*</span>
                        </label>
                        <select id="casaSelect" name="InfoDetallada.CasaId"
                                class="form-select select2-casa" style="width: 100%;">
                            <option value="">-- Escriba para buscar casa --</option>
                            @if (Model.InfoDetallada.CasaId != null && !string.IsNullOrEmpty(Model.NombreCasaSeleccionada))
                            {
                                <option value="@Model.InfoDetallada.CasaId" selected>@Model.NombreCasaSeleccionada</option>
                            }
                        </select>
                        <span asp-validation-for="InfoDetallada.CasaId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <button type="button" id="btnVerCasa" class="btn btn-outline-primary w-100"
                                @(Model.InfoDetallada.CasaId != null ? "" : "disabled")>
                            <i class="bi bi-eye"></i> Ver detalle casa
                        </button>
                        <button type="button" id="btnResetCasa" class="btn btn-outline-primary w-100 mt-2"
                                @(Model.InfoDetallada.CasaId != null ? "" : "disabled")>
                            <i class="bi bi-x-circle-fill"></i> Reset detalle Casa
                        </button>
                    </div>
                </div>

                <div id="previewCasa" class="mt-3 preview-card @(Model.InfoDetallada.CasaId != null ? "" : "d-none")">
                    <div id="previewCasaContent"></div>
                </div>

            </div>
        </div>

        <!-- ================= EDIFICIO ================= -->
        <div class="card mb-4 @(radioCasaChecked ? "d-none" : "")" id="cardEdificio">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="m-0"><i class="bi bi-building"></i> Selección de Edificio</h5>
                <span class="badge bg-white text-primary" id="badgeEdificio">
                    @(Model.InfoDetallada.IdEdificio != null ? "Seleccionado" : "Pendiente")
                </span>
            </div>
            <div class="card-body p-4" id="contenidoEdificio">

                <div class="row align-items">
                    <div class="col-md-8">
                        <label asp-for="InfoDetallada.IdEdificio" class="form-label fw-bold">
                            Buscar Edificio <span class="text-danger">*</span>
                        </label>
                        <select id="edificioSelect" name="InfoDetallada.IdEdificio"
                                class="form-select select2-edificio" style="width: 100%;">
                            <option value="">-- Escriba para buscar edificio --</option>
                            @if (Model.InfoDetallada.IdEdificio != null && !string.IsNullOrEmpty(Model.NombreEdificioSeleccionado))
                            {
                                <option value="@Model.InfoDetallada.IdEdificio" selected>@Model.NombreEdificioSeleccionado</option>
                            }
                        </select>
                        <span asp-validation-for="InfoDetallada.IdEdificio" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <button type="button" id="btnVerEdificio" class="btn btn-outline-primary w-100"
                                @(Model.InfoDetallada.IdEdificio != null ? "" : "disabled")>
                            <i class="bi bi-eye"></i> Ver detalle edificio
                        </button>
                        <button type="button" id="btnResetEdificio" class="btn btn-outline-primary w-100 mt-2"
                                @(Model.InfoDetallada.IdEdificio != null ? "" : "disabled")>
                            <i class="bi bi-x-circle-fill"></i> Reset detalle Edificio
                        </button>
                    </div>
                </div>

                <div id="previewEdificio" class="mt-3 preview-card @(Model.InfoDetallada.IdEdificio != null ? "" : "d-none")">
                    <div id="previewEdificioContent"></div>
                </div>

            </div>
        </div>

        <!-- ================= VEHÍCULO ================= -->
        <div class="card mb-4">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="m-0"><i class="bi bi-car-front"></i> Selección de Vehículo</h5>
                <span class="badge bg-white text-primary" id="badgeVehiculo">
                    @(Model.InfoDetallada.IdVehiculo != null ? "Seleccionado" : "Pendiente")
                </span>
            </div>
            <div class="card-body p-4">

                <div class="row align-items">
                    <div class="col-md-8">
                        <label asp-for="InfoDetallada.IdVehiculo" class="form-label fw-bold">
                            Buscar Vehículo <span class="text-danger">*</span>
                        </label>
                        <select id="vehiculoSelect" name="InfoDetallada.IdVehiculo"
                                class="form-select select2-vehiculo" style="width: 100%;">
                            <option value="">-- Escriba para buscar vehículo --</option>
                            @if (Model.InfoDetallada.IdVehiculo != null && !string.IsNullOrEmpty(Model.NombreVehiculoSeleccionado))
                            {
                                <option value="@Model.InfoDetallada.IdVehiculo" selected>@Model.NombreVehiculoSeleccionado</option>
                            }
                        </select>
                        <span asp-validation-for="InfoDetallada.IdVehiculo" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <button type="button" id="btnVerVehiculo" class="btn btn-outline-primary w-100"
                                @(Model.InfoDetallada.IdVehiculo != null ? "" : "disabled")>
                            <i class="bi bi-eye"></i> Ver detalle vehículo
                        </button>
                        <button type="button" id="btnResetVehiculo" class="btn btn-outline-primary w-100 mt-2"
                                @(Model.InfoDetallada.IdVehiculo != null ? "" : "disabled")>
                            <i class="bi bi-x-circle-fill"></i> Reset detalle Vehiculo
                        </button>
                    </div>
                </div>

                <div id="previewVehiculo" class="mt-3 preview-card @(Model.InfoDetallada.IdVehiculo != null ? "" : "d-none")">
                    <div id="previewVehiculoContent"></div>
                </div>

            </div>
        </div>

        <!-- ================= DATOS ADICIONALES ================= -->
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="m-0"><i class="bi bi-card-list"></i> Datos de Acceso</h5>
            </div>
            <div class="card-body p-4">

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="InfoDetallada.NumeroPlaca" id="NumeroPlaca" class="form-label fw-bold">Placa Vehicular</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-car-front"></i></span>
                            <input asp-for="InfoDetallada.NumeroPlaca" class="form-control text-uppercase"
                                   placeholder="ABC1234" maxlength="20" />
                        </div>
                        <span asp-validation-for="InfoDetallada.NumeroPlaca" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="InfoDetallada.NumeroTag" id="NumeroTag" class="form-label fw-bold">Número de Tag</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            <input asp-for="InfoDetallada.NumeroTag" class="form-control"
                                   placeholder="Solo números" maxlength="50" inputmode="numeric" />
                        </div>
                        <span asp-validation-for="InfoDetallada.NumeroTag" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="InfoDetallada.NumeroTarjeta" id="NumeroTarjeta" class="form-label fw-bold">Número de Tarjeta</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-credit-card"></i></span>
                            <input asp-for="InfoDetallada.NumeroTarjeta" class="form-control"
                                   placeholder="Solo números" maxlength="50" inputmode="numeric" />
                        </div>
                        <span asp-validation-for="InfoDetallada.NumeroTarjeta" class="text-danger small"></span>
                    </div>

                    <!-- ✅ ESTADO DEL REGISTRO (BD) -->
                    <div class="row g-3 mt-3">
                        <div class="col-md-6">
                            <label asp-for="InfoDetallada.Estado" class="form-label fw-bold">
                                <i class="bi bi-database"></i> Estado del Registro
                            </label>
                            <select asp-for="InfoDetallada.Estado" class="form-select" id="selectEstado" onchange="actualizarBadgeEstado()">
                                <option value="true">✅ Activo</option>
                                <option value="false">❌ Inactivo</option>
                            </select>
                            <span asp-validation-for="InfoDetallada.Estado" class="text-danger"></span>

                            <!-- Badge dinámico Estado -->
                            <div class="mt-2" id="badgeEstadoContainer">
                                @if (Model.InfoDetallada.Estado)
                                {
                                    <span class="badge bg-success fs-6" id="badgeEstado">
                                        <i class="bi bi-check-circle-fill"></i> Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6" id="badgeEstado">
                                        <i class="bi bi-x-circle-fill"></i> Inactivo
                                    </span>
                                }
                            </div>
                        </div>

                        <!-- ✅ PERMISO DE ACCESO -->
                        <div class="col-md-6">
                            <label asp-for="InfoDetallada.Permiso" class="form-label fw-bold">
                                <i class="bi bi-shield-check"></i> Permiso de Acceso
                            </label>
                            <select asp-for="InfoDetallada.Permiso" class="form-select" id="selectPermiso" onchange="actualizarBadgePermiso()">
                                <option value="true">✅ Permitido</option>
                                <option value="false">❌ Denegado</option>
                            </select>
                            <span asp-validation-for="InfoDetallada.Permiso" class="text-danger"></span>

                            <!-- Badge dinámico Permiso -->
                            <div class="mt-2" id="badgePermisoContainer">
                                @if (Model.InfoDetallada.Permiso)
                                {
                                    <span class="badge bg-primary fs-6" id="badgePermiso">
                                        <i class="bi bi-shield-check"></i> Acceso Permitido
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger fs-6" id="badgePermiso">
                                        <i class="bi bi-shield-x"></i> Acceso Denegado
                                    </span>
                                }
                            </div>
                        </div>
                    </div>



                </div>

            </div>

            <!--************************************************************************FOTO**************************************************************************-->
            <div class="col-md-12 mb-3">
                <label class="form-label fw-bold">Seleccione método de imagen</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="opcionImagen" id="opcionArchivo" value="archivo" checked onchange="toggleImagen()">
                    <label class="form-check-label" for="opcionArchivo">Subir desde archivo</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="opcionImagen" id="opcionCamara" value="camara" onchange="toggleImagen()">
                    <label class="form-check-label" for="opcionCamara">Tomar con cámara</label>
                </div>
            </div>

            <!-- Subir archivo (correcto) -->
            <div id="divArchivo" class="mb-3">
                <label class="form-label">Imagen</label>
                <input asp-for="ArchivoImagen" type="file" class="form-control" onchange="previewArchivo(this)" />
                <span asp-validation-for="ArchivoImagen" class="text-danger"></span>
            </div>

            <!-- Tomar foto -->
            <div id="divCamara" class="mb-3" style="display:none;">
                <label>Tomar Foto</label>
                <video id="video" width="320" height="240" autoplay class="border mb-2" style="display:none;"></video>
                <button type="button" class="btn btn-primary" onclick="iniciarCamara()">
                    <i class="bi bi-camera-video"></i> Abrir Cámara
                </button>
                <button type="button" class="btn btn-success mt-2" onclick="tomarFoto()">
                    <i class="bi bi-camera-fill"></i> Tomar Foto
                </button>
                <canvas id="canvas" style="display:none;"></canvas>
                <input type="hidden" asp-for="FotoBase64" />
            </div>

            <!-- Vista previa única -->
          @*   <img id="previewImagen" src="" class="img-thumbnail mt-2" style="display:none; max-width:200px;" /> *@
             <img id="previewImagen"
                 src="@(string.IsNullOrEmpty(Model.InfoDetallada.ImgVehiculo)
                             ? ""
                                              : Url.Content(Model.InfoDetallada.ImgVehiculo))"
                 class="img-thumbnail mt-2"
                 style="@(string.IsNullOrEmpty(Model.InfoDetallada.ImgVehiculo)
                             ? "display:none;"
                             : "display:block;") max-width:200px;" />


            <!--************************************************************************FIN DE FOTO**************************************************************************-->


        </div>

        <!-- ================= BOTONES ================= -->
        <div class="d-flex justify-content-end gap-3 mb-5">
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
            <button type="button" id="btnGuardarInfo" class="btn btn-warning btn-lg">
                <i class="bi bi-check-lg"></i> Actualizar Información
            </button>
        </div>

    </form>

</div>

<!-- ================= MODAL PERSONA ================= -->
