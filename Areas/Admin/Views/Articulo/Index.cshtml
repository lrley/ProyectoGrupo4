@{
    ViewData["Title"] = "Articulos";
}

<div class="container mt-4">
    <div class="row">

        <div class="col-8">
            <h2 class="text-primary">Lista de Articulos</h2>
        </div>

        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo Articulo</a>
            <i class="fa-solid fa-plus"></i>
        </div>

    </div>

    <br />
    <br />

    <table id="tblArticulo" class=" table table-striped table-bordered ">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre de Articulo</th>
                <th>Categoria</th>
                <th>Descripcion</th>
                <th>Imagen</th>

                <th>Fecha de Ingreso</th>
                <th>Fecha de Creacion</th>
                <th>Fecha de Actualizacion</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/Articulo.js"></script>
}