@using DlaccessCore.Models.Models.ViviendaViewModels.Urbanizacion
@model Urbanizacion

@{
    ViewData["Title"] = "Edit Urbanizacion";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}



<br />
<br />
<h2 class="text-primary">Editar Urbanizacion</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="row px-2 offset-1 border">

        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }



        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreUrbanizacion"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreUrbanizacion" class="form-control" placeholder="Ingrese la Urbanizacion" />
                    <span asp-validation-for="NombreUrbanizacion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-4 mb-4">
                <div class="col-4">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Estado" class="form-control">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>




            <div class="form-group-row mt-3 ">
                <div class="col ">

                    <div class="d-flex justify-content-center gap-4 mt-4 mb-4">
                        <button type="submit" class="btn btn-primary "><i class="bi bi-plus-circle"></i>Editar</button>
                        <a asp-action="Index" class="btn btn-success btn-sm">Volver Atrás</a>
                    </div>


                </div>
            </div>

        </div>



    </div>



</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


