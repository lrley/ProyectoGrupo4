@using DlaccessCore.Models.Models.ProductoModel
@model Categoria

@{
    ViewData["Title"] = "Crear Categoria";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}



<br />
<br />
<h2 class="text-dark">Crear Categoria</h2>

<form method="post" asp-action="Create">
    <div class="row px-2 offset-1 border">

        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }

        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4  mt-4 mb-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8  mt-4 mb-2">
                    <input asp-for="Nombre" class="form-control  border border-dark" placeholder="Ingrese La Categoria" />
                    <span asp-validation-for="Nombre"  class="text-danger"></span>
                </div>


            </div>

            <div class="form-group row">
                <div class="col-4  mt-4 mb-4">
                    <label asp-for="Orden"></label>
                </div>
                <div class="col-8 mt-4 mb-4">
                    <input asp-for="Orden" class="form-control  border border-dark" placeholder="Ingrese el Orden" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>




            <div class="form-group-row mt-3 ">
                <div class="col-8 mt-3 ">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>

        </div>



    </div>



</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




