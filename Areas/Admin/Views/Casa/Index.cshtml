@{
    ViewData["Title"] = "Casa";
}

<div class="container mt-4">
    <div class="row">

        <div class="col-8">
            <h2 class="text-primary">Lista de Casas</h2>
        </div>

        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">Crear Nueva Casa</a>
            <i class="fa-solid fa-plus"></i>
        </div>

    </div>

    <br />
    <br />

    <table id="tblCasa" class=" table table-striped table-bordered ">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre de la Familia</th>
                <th>Manzana</th>
                <th>Villa</th>

                <th>Fecha de Creacion</th>
                <th>Fecha de Actualizacion</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        </table>
</div>

@section Scripts {
    <script src="~/js/Casa.js"></script>
}