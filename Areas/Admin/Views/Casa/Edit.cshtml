@using DlaccessCore.Models.ViewModels
@model CasaVM

@{
    ViewData["Title"] = "Editar Casa";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">@TempData["Success"]</div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow border-2 border-dark">
                <div class="card-header bg-dark text-white text-center">
                    <h5 class="mb-0">
                        <i class="bi bi-house-door-fill me-2"></i>
                        Editar Casa
                    </h5>
                </div>

                <div class="card-body">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                    }

                    <form method="post" asp-action="Edit">
                        <input type="hidden" asp-for="Casa.Id" />

                        <div class="row">
                            <!-- Nombre Familia -->
                            <div class="col-md-12 mb-3">
                                <label asp-for="Casa.NombreFamilia" class="form-label fw-bold py-2">Nombre Familia</label>
                                <input asp-for="Casa.NombreFamilia"
                                       class="form-control border-dark"
                                       placeholder="Ingrese la Familia o nombre de la MZ y Villa" />
                                <span asp-validation-for="Casa.NombreFamilia" class="text-danger"></span>
                            </div>

                            <!-- Estado -->
                            <!-- Estado -->
                            <div class="col-md-12 mb-3">
                                <label asp-for="Casa.Estado" class="form-label fw-bold">Estado</label>
                                <select asp-for="Casa.Estado" class="form-select border-dark">
                                    <option value="true">Activo</option>
                                    <option value="false">Inactivo</option>
                                </select>

                                <span asp-validation-for="Casa.Estado" class="text-danger"></span>

                                <div class="mt-3 text-center">
                                    @if (Model.Casa.Estado)
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-check-circle-fill"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">
                                            <i class="bi bi-x-circle-fill"></i> Inactivo
                                        </span>
                                    }
                                </div>
                            </div>

                            <!-- Manzana -->
                            <div class="col-md-4 mb-3">
                                <label asp-for="Casa.ManzanaId" class="form-label fw-bold">Manzana</label>
                                @Html.DropDownListFor(m => m.Casa.ManzanaId,
                                Model.ListaManzana,
                                                                "-Seleccione la Manzana-",
                                                                new { @class = "form-select border-dark" })
                                <span asp-validation-for="Casa.ManzanaId" class="text-danger"></span>
                            </div>

                            <!-- Villa -->
                            <div class="col-md-4 mb-3">
                                <label asp-for="Casa.VillaId" class="form-label fw-bold">Villa</label>
                                @Html.DropDownListFor(m => m.Casa.VillaId,
                                                                Model.ListaVilla,
                                                                "-Seleccione la Villa-",
                                                                new { @class = "form-select border-dark" })
                                <span asp-validation-for="Casa.VillaId" class="text-danger"></span>
                            </div>

                            <!-- Etapa -->
                            <div class="col-md-4 mb-3">
                                <label asp-for="Casa.EtapaId" class="form-label fw-bold">Etapa</label>
                                @Html.DropDownListFor(
                                                                m => m.Casa.EtapaId,
                                                                Model.ListaEtapa,
                                                                "-Seleccione la Etapa-",
                                                                new { @class = "form-select border-dark" })
                                <span asp-validation-for="Casa.EtapaId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success me-2">
                                <i class="bi bi-save"></i> Guardar cambios
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Volver Atrás
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $('.selectpicker').selectpicker();
        });
    </script>
}