@using DlaccessCore.Models.ViewModels
@model EdificioVM

@{
    ViewData["Title"] = "Editar Edificio";
}

<div class="container mt-4">
    <!-- Mensajes -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Casa</h4>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="Edificio.Id" />

                <!-- Validaciones -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }

                <div class="row g-3">
                    <!-- Nombre Familia -->
                    <div class="col-md-6">
                        <label asp-for="Edificio.NombreFamilia" class="form-label"></label>
                        <input asp-for="Edificio.NombreFamilia" class="form-control"
                               placeholder="Ingrese la Familia o nombre del Dpto y Piso" />
                        <span asp-validation-for="Edificio.NombreFamilia" class="text-danger"></span>
                    </div>

                    <!-- Estado -->
                    <div class="col-md-6">
                        <label asp-for="Edificio.Estado" class="form-label"></label>
                        <select asp-for="Edificio.Estado" class="form-select">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <span asp-validation-for="Edificio.Estado" class="text-danger"></span>

                        <!-- Badge dinámico -->
                        <div class="mt-2">
                            @if (Model.Edificio.Estado)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-hand-thumbs-up-fill"></i> Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-eye-slash-fill"></i> Inactivo
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Selects -->
                <div class="row g-3 mt-3">
               
                    <!-- Nombre del Edificio -->
                    <div class="col-md-4">
                        <label asp-for="Edificio.NombreEdificio" class="form-label">Edificio</label>
                        @Html.DropDownListFor(m => m.Edificio.NombreEdificio,
                        new List<SelectListItem>
                                                {
                                                new SelectListItem { Value = "", Text = "-Seleccione el Edificio-" },
                                                new SelectListItem { Value = "Edificio Principal", Text = "Edificio Principal" }
                                                },
                                                null,
                                                new { @class = "selectpicker form-select", data_live_search = "true" })
                        <span asp-validation-for="Edificio.NombreEdificio" class="text-danger"></span>
                    </div>
                    <!-- Departamento -->
                    <div class="col-md-4">
                        <label asp-for="Edificio.DepartamentoId" class="form-label">Departamento</label>
                        @Html.DropDownListFor(m => m.Edificio.DepartamentoId,
                        Model.ListaDepartamentos,
                                                "-Seleccione el Departamento-",
                                                new { @class = "selectpicker form-select", data_live_search = "true" })
                        <span asp-validation-for="Edificio.DepartamentoId" class="text-danger"></span>
                    </div>

                    <!-- Piso -->
                    <div class="col-md-4">
                        <label asp-for="Edificio.PisoId" class="form-label">Piso</label>
                        @Html.DropDownListFor(m => m.Edificio.PisoId,
                                                Model.ListaPisos,
                                                "-Seleccione el Piso-",
                                                new { @class = "selectpicker form-select", data_live_search = "true" })
                        <span asp-validation-for="Edificio.PisoId" class="text-danger"></span>
                    </div>

                    <!-- Etapa -->
                    <div class="col-md-4 mb-3">
                        <label asp-for="Edificio.EtapaId" class="form-label fw-bold">Etapa</label>
                        @Html.DropDownListFor(
                                                m => m.Edificio.EtapaId,
                                                Model.ListaEtapa,
                                                "-Seleccione la Etapa-",
                                                new { @class = "form-select border-dark" })
                        <span asp-validation-for="Edificio.EtapaId" class="text-danger"></span>
                    </div>

            
                </div>

                <!-- Botones -->
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $('.selectpicker').selectpicker();
        });
    </script>
}